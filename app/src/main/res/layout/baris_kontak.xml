<!--        </TextView>-->

        <TextView
            android:id="@+id/txtNama"
            style="@style/recyclerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:drawableStart="@drawable/ic_person"
            android:drawablePadding="15dp"
            android:text="@string/namaPL"
            android:textColor="@color/black">

        </TextView>

        <TextView
            android:id="@+id/txtNoTelp"
            style="@style/recyclerNoTelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtNama"
            android:layout_margin="8dp"
            android:layout_marginStart="25sp"
            android:drawableStart="@drawable/ic_phone"
            android:drawablePadding="15dp"
            android:text="@string/notelpPL"
            android:textColor="@color/black">

        </TextView>

        <TextView
            android:id="@+id/txtEmail"
            style="@style/recyclerEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtNoTelp"
            android:layout_margin="8dp"
            android:layout_marginStart="25sp"
            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="15dp"
            android:text="@string/emailPL"
            android:textColor="@color/black">

        </TextView>

    </RelativeLayout>


</RelativeLayout>